<%- include("partials/header") %>

    <div class="w-full h-screen mx-auto  bg-zinc-800 text-white p-8  shadow-lg">
        <div class=" flex items-center justify-center">
            <div>
                <h2 class="text-3xl font-bold mb-6 text-center">Edit Profile</h2>

                <form action="/edit" method="POST" enctype="multipart/form-data" class="space-y-5">

                    <!-- Full Name -->
                    <div>
                        <label for="fullname" class="block mb-1 font-medium text-gray-300">Full Name:</label>
                        <input type="text" id="fullname" name="fullname" value="<%= user.fullname %>"
                            class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded focus:outline-none focus:ring-2 focus:ring-red-500"
                            required>
                    </div>

                    <!-- Username -->
                    <div>
                        <label for="username" class="block mb-1 font-medium text-gray-300">Username:</label>
                        <input type="text" id="username" name="username" value="<%= user.username %>"
                            class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded focus:outline-none focus:ring-2 focus:ring-red-500"
                            required>
                    </div>

                    <!-- Bio -->
                    <div>
                        <label for="bio" class="block mb-1 font-medium text-gray-300">Bio:</label>
                        <textarea id="bio" name="bio" rows="4"
                            class="w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded resize-none focus:outline-none focus:ring-2 focus:ring-red-500"><%= user.bio %></textarea>
                    </div>

                    <!-- Profile Picture -->
                    <div>
                        <label for="profileImage" class="block mb-1 font-medium text-gray-300">Change Profile
                            Picture:</label>
                        <input type="file" id="profileImage" name="profileImage"
                            class="w-full px-3 py-2 bg-gray-800 text-gray-300 border border-gray-700 rounded focus:outline-none focus:ring-2 focus:ring-red-500">
                    </div>

                    <!-- Submit Button -->
                    <button type="submit"
                        class="w-full py-2 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg transition duration-300">
                        Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>

    <%- include("partials/footer") %>